doctype html
html(lang="es")
      head
      include template/headSRC
        
      title #{title}

      body
            .loading.show
                  p Cargando...
                  .spin

            include template/nav
            #panelContainer 

                  .panel.one
                        .content.card
                              .card-body(style="max-height:800px; overflow-y:auto;")
                                    include template/menu
                  .panel.two
                        .content.p-0(style="max-height:800px; overflow-y:auto;")
                              h3.my-3.mx-3 Ordenes 
                              hr
                        .row.mx-2
                              .col-6.col-sm-6.col-md-6.col-lg-6
                                    .card 
                                          .card-header.p-0.m-0.bg-dark
                                                .py-2.m-0
                                                      h5.text-white.mx-2 Datos para nueva orden:
                                          .card-body      
                                                .row.my-2
                                                
                                                      .col-6.col-sm-6.col-md-6
                                                                
                                                            .text-start
                                                                  label.fw-bold Dentista:
                                                                  input.dentistas_name.rounded-pill.border.border-dark(style="width:95%;" list='dentista_option')
                                                                  datalist#dentista_option
                                                            .text-start.my-2
                                                                  label.fw-bold Paciente:
                                                                  input.paciente_name.rounded-pill.border.border-dark( style="width:95%;" type="text")
                                                                 
                                                      .col-6.col-sm-6.col-md-6
                                                                                                   
                                                            .text-start

                                                                  label.fw-bold Entrada:
                                                                  br
                                                                  input.date_entrada.rounded-pill.border.border-dark(style="width:80%;" type="text")
                                                                  datalist#dentista_option
                                                            .text-start.my-2

                                                                  label.fw-bold Salida:
                                                                  br
                                                                  input.date_salida.rounded-pill.border.border-dark(style="width:80%;" type="text")
                                                                  datalist#dentista_option
                                                .card-footer
                                                      .text-center.my-2
                                                                  label.fw-bold Comentario:
                                                                  textarea.comntario_order.border.border-dark(style="width:95%;" name="", cols="5", rows="2")
                                                            
                                                       
                  
                              .col-6.col-sm-6.col-md-6.col-lg-6 
                                    .card
                                          .card-header.p-0.m-0.bg-dark
                                                .py-2.m-0
                                                      h5.text-white.mx-2 Producto:

                                          .card-body
                                                div
                                                      .row
                                                            .col-2
                                                                  button.btn.btn-warning(type="button")
                                                                        i.fa-solid.fa-tooth.text-white
                                                                        span.badge.badge-light.text-dark.mx-2  4
                                                            .col-7 
                                                                  label.fw-bold Producto:
                                                                  input.producto_name.rounded-pill.border.border-dark(style="width:95%;" list='producto_option')
                                                                  datalist#producto_option
                                                            .col-3 
                                                                  label.fw-bold Color:
                                                                  input.color_name.rounded-pill.border.border-dark(style="width:95%;" list='color_option')
                                                                  datalist#color_option
                                                hr
                                                div
                                          .card-footer





                              
               
         
          
        
      include template/scripts
      script( src='./public/core/js/common.js')
      script( src='./public/core/js/ordenes.js')
