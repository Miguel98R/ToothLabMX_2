#detailsDentist_modal.modal.fade(tabindex='-1')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header.bg-dark.text-white
        h5.modal-title 
             b Datos del dentista
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        .card
            .card-body 
                div
                    .row
                        .col-12
                            .form-group
                                label(for='name_dentist')
                                    i.fas.fa-user-nurse 
                                    |  Nombre completo :
                                input.form-control#nombre_dentista(type="text")
                            .form-group
                                label(for='direccion_dentist') 
                                    i.fas.fa-map-marked-alt
                                    |  Direcci√≥n :
                                input.form-control#direccion_dentista(type="text")
                    
                    .row
                        .col-6
                            .form-group
                                label(for='email_dentist') 
                                    i.far.fa-envelope
                                    |  Email :
                                input.form-control#email_dentista(type="email")
                            .form-group
                                label(for='tel_dentista')
                                    i.fas.fa-mobile-alt
                                    |  Cel/Tel Dentista :
                                input.form-control#cel_dentista(type="text" minlength=0 maxlength=10)

                        .col-6
                            .form-group
                                label(for='tel_consultorio')
                                    i.fas.fa-phone 
                                    |  Cel/Tel Consultorio :
                                input.form-control#cel_consultorio(type="text" minlength=0 maxlength=10)
                            .form-group   
                                label(for='distintivo_dentista') 
                                    i.fas.fa-palette
                                    |  Distintivo :
                                input.form-control#Color_dentista(type="color")

                            
                    
                    



            .card-footer
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cerrar
        button.btn.btn-success.save_edit(type='button' data-bs-dismiss='modal') Guardar
